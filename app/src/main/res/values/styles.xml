<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_30</item>
        <item name="android:layout_marginEnd">@dimen/margin_30</item>
        <item name="android:textSize">@dimen/txtsize_32</item>
    </style>

    <style name="LoginInput" parent="LoginTextView">
        <item name="android:layout_height">@dimen/default_height_60</item>
        <item name="android:textSize">@dimen/txtsize_18</item>
        <item name="android:paddingStart">@dimen/padding_txtinput_login</item>
        <item name="android:paddingEnd">@dimen/padding_txtinput_login</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="PrivacidadeLayout">

        
    </style>

</resources>