<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacidadeActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@color/txt_Privacidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="200dp"
        android:text="@string/txt_Privacidade"
        android:textColor="#FFFFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/container_roxo"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_priva2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/container_azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        tools:layout_editor_absoluteY="365dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="74dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="276dp"
        android:layout_marginBottom="16dp"
        android:text="READ MORE"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_roxo"
        app:layout_constraintEnd_toEndOf="@+id/container_roxo"
        app:layout_constraintStart_toStartOf="@+id/container_roxo"
        app:layout_constraintTop_toTopOf="@+id/container_roxo" />

    <TextView
        android:id="@+id/text_container_azul"
        android:layout_width="322dp"
        android:layout_height="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="70dp"
        android:text="@string/txt_PermitirSpam"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_roxo"
        app:layout_constraintEnd_toEndOf="@+id/container_roxo"
        app:layout_constraintStart_toStartOf="@+id/container_roxo"
        app:layout_constraintTop_toTopOf="@+id/container_roxo" />

    <View
        android:id="@+id/container_azul"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/background_priva1"
        app:layout_constraintBottom_toTopOf="@+id/container_roxo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="100dp"
        android:text="@string/txt_Permitirlocalizacao"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_azul"
        app:layout_constraintEnd_toEndOf="@+id/container_azul"
        app:layout_constraintStart_toStartOf="@+id/container_azul"
        app:layout_constraintTop_toTopOf="@+id/container_azul" />


    <TextView
        android:layout_width="322dp"
        android:layout_height="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="67dp"
        android:text="@string/txt_Permitirajuda"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_azul"
        app:layout_constraintEnd_toEndOf="@+id/container_azul"
        app:layout_constraintStart_toStartOf="@+id/container_azul"
        app:layout_constraintTop_toTopOf="@+id/container_azul" />

    <TextView
        android:layout_width="93dp"
        android:layout_height="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="25dp"
        android:autoLink="all"
        android:clickable="true"
        android:text="@string/txt_ReadMore"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_azul"
        app:layout_constraintEnd_toEndOf="@+id/container_azul"
        app:layout_constraintStart_toStartOf="@+id/container_azul"
        app:layout_constraintTop_toTopOf="@+id/container_azul" />

    <Button
        android:id="@+id/button"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/background_buttonpriva"
        android:hint="@string/btn_privacidade"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_roxo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="100dp"
        android:text="@string/txt_PermitirEmail"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/container_roxo"
        app:layout_constraintEnd_toEndOf="@+id/container_roxo"
        app:layout_constraintStart_toStartOf="@+id/container_roxo"
        app:layout_constraintTop_toTopOf="@+id/container_roxo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_azul"
        app:layout_constraintEnd_toEndOf="@+id/container_azul"
        app:layout_constraintStart_toStartOf="@+id/container_azul"
        app:layout_constraintTop_toTopOf="@+id/container_azul" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="118dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_roxo"
        app:layout_constraintEnd_toEndOf="@+id/container_roxo"
        app:layout_constraintStart_toStartOf="@+id/container_roxo"
        app:layout_constraintTop_toTopOf="@+id/container_roxo"
        app:layout_goneMarginEnd="36dp" />


</androidx.constraintlayout.widget.ConstraintLayout>