<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeFragment"
    android:orientation="vertical"
    android:padding="@dimen/fundo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/imagemwidth"
        android:layout_height="@dimen/imagemheight"
        android:src="@drawable/imagemtres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_marginBottom="@dimen/fundo"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/textwidth"
        android:layout_height="@dimen/textheight"
        android:layout_gravity="center"
        android:text="@string/textos"
        android:textColor="@color/colorbrancoletra"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="@dimen/text_margin_top"/>
</androidx.constraintlayout.widget.ConstraintLayout>